<?xml version="1.0" encoding="UTF-8"?>
<odoo>
 <template id="performa_invoice">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                 <t t-call="web.external_layout">

                     <div class="page">
                        <div class="oe_structure"/>
                          <t t-set="address">
                                  <div t-field="docs.partner_id"
                                     t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}' />
                                   <p t-if="docs.partner_id.vat"><t t-esc="docs.company_id.country_id.vat_label or 'Tax ID'"/>:
                                       <span t-field="docs.partner_id.vat"/></p>
                           </t>
<!--                                    <div class="col-xs-8" style="margin:auto">-->
                         <table class="table table-sm table-striped table-bordered">
                             <tr>
                                 <td>
                                     PI NO:
                                     <span t-esc="docs['name']" />
                                 </td>
                                 <td>
                                     Date:
                                     <span t-esc="docs['invoice_date']" t-options="{'widget': 'date'}" />
                                 </td>
                             </tr>

                             <tr>
                                 <td>
                                     DELIVERY DATE:
                                     <span t-esc="docs['invoice_date']" t-options="{'widget': 'date'}" />
                                 </td>
                                 <td>
                                     ORDER#:
                                     <span t-esc="docs['invoice_origin']" />
                                 </td>
                             </tr>
                             <tr>
                                 <td>
                                     PAYMENT TERMS:
                                     <span t-esc="docs['invoice_payment_term_id'].name"/>
                                 </td>
                                 <td>
                                     TRADE TERM: FOB
<!--                                                <span t-esc="docs['invoice_origin']" />-->
                                 </td>
                             </tr>
                             <tr>
                                 <td>
                                     SHIP VIA: SEA
<!--                                                <span t-esc="docs['invoice_date']" t-options="{'widget': 'date'}" />-->
                                 </td>
                                 <td>
<!--                                                <span t-esc="docs['invoice_origin']" />-->
                                 </td>
                             </tr>
                             <tr>
                                 <td>
<!--                                                style="display:inline-block;width:100px;min-width:100px;"-->
                                     <p>PORT OF LOADING: PORT QASIM</p>
<!--                                                <span t-esc="docs['invoice_date']" t-options="{'widget': 'date'}" />-->
                                 </td>
                                 <td>
<!--                                                style="display:inline-block;width:100px;min-width:100px;"-->
                                     <p>PORT OF DISCHARGE: PORT LUISVILLA</p>
<!--                                                <span t-esc="docs['invoice_origin']" />-->
                                 </td>
                             </tr>
                             <tr>
                                 <td>
                                     SHIPMENT OF:  Moterbike gloves
<!--                                                <span t-esc="docs['invoice_date']" t-options="{'widget': 'date'}" />-->
                                 </td>
                                 <td>
                                     COUNTRY OF ORIGIN: Pakistan
<!--                                                <span t-esc="docs['invoice_origin']" />-->
                                 </td>
                             </tr>
                         </table>

                                      <table class="table table-sm table-striped table-bordered">
                                      <thead>
                                              <tr>
                                                  <th>
                                                      ARTICLE NAME/NO.
                                                  </th>
                                                  <th>
                                                      QTY <br/> UNIT
                                                  </th>
                                                  <th>
                                                      DESCRIPTION OF GOODS
                                                  </th>
                                                  <th>
                                                      PRICE FOB <br/> USD
                                                  </th>
                                                  <th>
                                                      TOTAL AMOUNT
                                                  </th>
                                             </tr>
                                      </thead>
                                      <tbody class="sale_tbody">
                                         <t t-foreach="performa_invoice_list" t-as="i">
                                            <t t-if="i['product_id']">
                                              <tr>
                                                  <td>
                                                      <t t-esc="i['product_id'].name"/>
                                                  </td>
                                                  <td>
                                                      <t t-esc="i['quantity']"/>
                                                  </td>
                                                  <td>
                                                     <ul t-foreach="i['product_id'].product_template_attribute_value_ids" t-as="attrib_value">
                                                         <li t-esc=" '%s: %s' % (attrib_value.attribute_id.name, attrib_value.name)"/>
                                                     </ul>
                                                  </td>
                                                  <td>
                                                      <t t-esc="i['price_unit']"/>
                                                  </td>
                                                  <td>
                                                      <t t-esc="i['price_subtotal']"/>
                                                  </td>
                                              </tr>
                                             </t>
                                           </t>
                                         </tbody>
                                      </table>
                                    </div>
<!--                     </div>-->
                 </t>
            </t>
        </t>

         <h3>Signature:______________</h3>

    </template>


</odoo>